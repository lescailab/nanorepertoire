profiles {
  docker {
    docker.enabled = true
    docker.runOptions = '-u \$(id -u):\$(id -g)'
    process.containerOptions = { "-v ${moduleDir}:${moduleDir}" }
  }
  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
    process.containerOptions = { "-B ${moduleDir}:${moduleDir}" }

  }

}

params {
  modules {
    'fastqc' {
      args = ""
    }
  }
}

process {
  withLabel:process_low {
    cpus = 1
    memory = 1.GB
  }
}
