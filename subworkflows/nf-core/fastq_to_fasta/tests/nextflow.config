
process {
  withName: FASTQC {
      cpus = 2
      memory = 6.GB
    }
    withName: CUTADAPT {
      cpus = 2
      memory = 6.GB
    }
    withName: FLASH {
      cpus = 2
      memory = 6.GB
      ext.args = '-m 20 -M 150'
    }
    withName: NANOTRANSLATE {
        cpus = 2 
        memory = 6.GB
      }
      
}

profiles {
  docker {
    docker.enabled = true
    docker.runOptions = '-u \$(id -u):\$(id -g)'
  }
  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
  }
}

